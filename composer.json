{
    "name": "antimattr/xml",
    "type": "library",
    "description": "XML Builder for use with SimpleXMLElement",
    "keywords": ["xml", "simplexml", "simplexmlelement"],
    "homepage": "http://github.com/antimattr/xml",
    "license": "MIT",
    "authors": [
        {"name": "Matthew Fitzgerald", "email": "matthewfitz@gmail.com"}
    ],
    "require": {
        "php": ">=5.3.2"
    },
    "require-dev": {
        "antimattr/test-case": "~1.0@stable",
        "phpunit/phpunit": "~4.0",
        "fabpot/php-cs-fixer": "dev-master"
    },
    "autoload": {
        "psr-0": { 
            "AntiMattr\\Xml\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": { 
            "AntiMattr\\TestCase\\": "vendor/antimattr/test-case/src",
            "AntiMattr\\Tests\\Xml\\": "tests/"
        }
    },
    "archive": {
        "exclude": ["bin", "tests", "*phpunit.xml"]
    }
}
